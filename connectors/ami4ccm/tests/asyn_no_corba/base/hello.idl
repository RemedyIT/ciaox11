#ifndef HELLO_IDL
#define HELLO_IDL


#pragma ami4ccm interface "Hello::MyFoo"

#pragma ami4ccm idl "helloA.idl"


module Hello
{
  exception InternalError
    {
      long id;
      string error_string;
    };

  // Sender/Receiver interface
  interface MyFoo
    {
      void hello (out long answer)
        raises (InternalError);
    };
};

#endif

