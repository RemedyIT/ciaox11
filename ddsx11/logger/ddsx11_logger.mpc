project(ddsx11_logger) : x11_logger, ciaox11_rules, ddsx11_output {
  requires += x11_logging

  dynamicflags = DDSX11_LOGGER_BUILD_DLL

  includes += $(CIAOX11_ROOT)/ddsx11

  Source_Files {
    ddsx11_log.cpp
  }

  Header_Files {
    ddsx11_log.h
    ddsx11_logger_export.h
  }

  specific {
    install_dir = ddsx11/logger
  }
}
