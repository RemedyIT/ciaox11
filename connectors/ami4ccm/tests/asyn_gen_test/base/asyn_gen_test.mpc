  libout = ../lib
  libpaths += ../lib
  includes += ..

  sharedname = Hello_ami4ccm_stub
  dynamicflags += HELLO_AMI4CCM_STUB_BUILD_DLL

  Source_Files {
    helloAC.cpp
  }

  Header_Files {
    helloAC.h
    hello_ami4ccm_stub_export.h
  }
}

