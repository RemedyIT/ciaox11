feature(ddsx11, ndds) {
  // Let the RIDL compiler generate the conversion traits.
  idlflags += -Gddsx11,traits

  Modify_Custom (IDL) {
    optional(header_pre_extension) {
      commandflags(-Gddsx11,traits) += _dds_traits
    }
  }
}
