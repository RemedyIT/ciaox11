// ----------- COMMON ---------------
project(*idl_gen) : ciaox11_test_base_idl {
  custom_only = 1
  idlflags += -Wb,base_export_macro=INOUT_ARGS_T \
              -Wb,base_export_include=inout_args_t

  IDL_Files {
    gendir=generated_code
    inout_args_t.idl
  }
}

project(*stub) : ciaox11_test_base {
  after += *idl_gen
  dynamicflags += INOUT_ARGS_T_STUB_BUILD_DLL

  Source_Files {
    generated_code/inout_args_tC.cpp
  }

  Header_Files {
    generated_code/inout_args_tC.h
    generated_code/inout_args_t_stub_export.h
  }
}

// ----------- Pattern specific ---------------
// ---- Synchronous request/reply pattern -----
project(*lem_gen) : ciaox11_test_base_lem_idl {
  custom_only = 1
  idlflags += -Wb,base_export_macro=INOUT_ARGS_T \
              -Wb,base_export_include=inout_args_t

  IDL_Files {
    gendir=generated_code
    inout_args_t.idl
  }
}

project(*lem_stub) : ciaox11_test_base {
  after += *stub *lem_gen
  libs  += *stub

  dynamicflags += INOUT_ARGS_T_LEM_STUB_BUILD_DLL

  Source_Files {
    generated_code/inout_args_tEC.cpp
  }

  Header_Files {
    generated_code/inout_args_tEC.h
    generated_code/inout_args_t_lem_stub_export.h
  }
}

