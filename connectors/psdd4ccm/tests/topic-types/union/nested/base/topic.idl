#ifndef TOPIC_IDL
#define TOPIC_IDL

module Test
{
  enum Option
  {
    ONE,
    TWO,
    THREE
  };

  union Variant switch(Option)
  {
    case ONE: string text;
    case TWO: unsigned long number;
    case THREE: boolean flag;
  };

  struct Topic
  {
    octet type;
    Variant value;
  }; //@TopLevel()
};

#endif
